<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:qinc="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:paddingLeft="13dp"
        android:paddingRight="13dp">

        <com.zsp.storeapp.view.IconTextView
            android:id="@+id/it_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:clickable="false"
            android:focusable="false"
            android:padding="4dp"
            android:text="@string/ic_un_select"
            android:textColor="@color/text1"
            android:textSize="24sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@id/it_select"
            android:background="@drawable/shape_round_rect_line_gray"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/default_icon_image" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/iv_image"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/iv_image"
                android:maxWidth="130dp"
                android:maxLines="1"
                android:text="iPhone 7，现更以红现更以红色呈现。"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_title"
                android:layout_alignLeft="@id/tv_title"
                android:layout_marginTop="12dp"
                android:text="￥12"
                android:textColor="@color/red"
                android:textSize="12sp" />


            <com.zsp.storeapp.view.NumberButton
                android:id="@+id/btn_number"
                android:layout_width="80dp"
                android:layout_height="26dp"
                android:layout_alignBottom="@id/tv_price"
                android:layout_alignParentRight="true"
                qinc:editable="false" />


        </RelativeLayout>


    </RelativeLayout>


</LinearLayout>