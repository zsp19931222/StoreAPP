<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:binding="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.zsp.storeapp.vm.LoginViewModel" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/edit_login_regist_selector"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账号 : "
                android:textColor="@color/black"
                android:textSize="@dimen/text_big_size" />

            <EditText
                android:id="@+id/et_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入账号"
                android:paddingLeft="10dp"
                android:text="@={viewModel.userName}"
                android:textColor="@color/text0"
                android:textSize="@dimen/text_big_size" />
        </LinearLayout>

        <View
            style="@style/lineStyle"
            android:layout_marginTop="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/edit_login_regist_selector"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密码 : "
                android:textColor="@color/black"
                android:textSize="19sp" />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:digits="0123456789qwertyuioplkjhgfdsazxcvbnm"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:maxLength="10"
                android:paddingLeft="10dp"
                android:text="@={viewModel.password}"
                android:textColor="@color/text0"
                android:textSize="@dimen/text_big_size" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_login"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/round_rect_main"
            android:gravity="center"
            android:text="登录 "
            binding:onClickCommand="@{viewModel.loginBinding}"
            android:textColor="@color/white"
            android:textSize="@dimen/text_big_size" />

    </LinearLayout>
</layout>
